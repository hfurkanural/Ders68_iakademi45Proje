@model User
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

{
<!-- wishlist area start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                    <div class="col-lg-6 col-md-6 col-sm-6 ">
                        <div class="cart_totals">
                            <h2>İLETİŞİM BİLGİLERİNİZ</h2>
                        
                            <div class="total_table" style="border-color:black;border:solid;">
                                <table class="table-responsive">
                                    <tbody>

                                        <tr class="cart-subtotal">
                                            <th>ADINIZ SOYADINIZ</th>
                                            <td><span class="amount">@Model.NameSurname</span></td>
                                        </tr>
                                        <tr class="cart-subtotal">
                                            <th>EMAIL</th>
                                            <td><span class="amount">@Model.Email</span></td>
                                        </tr>
                                        <tr class="cart-subtotal">
                                            <th>TELEFON</th>
                                            <td><span class="amount">@Model.Telephone</span></td>
                                        </tr>
                                        <tr class="cart-subtotal">
                                            <th>FATURA ADRESİ</th>
                                            <td><span class="amount">@Model.InvoiceAddress</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="submit_crtfurkan" style="text-align:right;">
                                    <a href="/Home/RegisterEdit" title="Üye Ol">
                                        <input type="button" class="update_cart" value="Bilgileri Güncelle" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form action="/Home/Order" method="post" id="com-form-login">

            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>KREDİ KARTI BİLGİLERİNİZİ GİRİNİZ</h2>
                                <div class="total_table" style="border-color:black;border:solid;">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Kart Numarası</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="kredikartno" class="inputbox" maxlength="16" required onkeypress="return numberonly(this,event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="cart-subtotal">
                                                <th>Ay Bilgisi</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="kredikartay" class="inputbox" maxlength="2" required onkeypress="return numberonly(this,event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="cart-subtotal">
                                                <th>Yıl</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="kredikartyil" class="inputbox" maxlength="2" required onkeypress="return numberonly(this,event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="cart-subtotal">
                                                <th>CVC</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="kredikartcvc" class="inputbox" maxlength="3" required onkeypress="return numberonly(this,event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>FATURA BİLGİLERİNİZİ GİRİNİZ</h2>
                                <div class="total_table" style="border-color:black;border:solid;">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <th>Fatura Tipi</th>
                                                <td>
                                                    <span class="amount">
                                                        @Html.RadioButton("invoicetype","rbindividual",new {value ="rbindividual",@checked=true}) Bireysel Fatura
                                                        @Html.RadioButton("invoicetype","rbcorporate",new {value ="rbcorporate",@checked=true}) Kurumsal Fatura
                                                    </span>
                                                </td>
                                            </tr>
                                            @*bireysel radiobutton seçilirse burası görünecek*@
                                            <tr class="cart-subtotal" id="tr_tckimlik">
                                                <th>TC Kimlik Numarası</th>
                                                <td>
                                                    <span class="amount">
                                                        <input type="text" name="txt_individual" class="inputbox" maxlength="11" required onkeypress="return numberonly(this,event)" />

                                                    </span>
                                                </td>
                                            </tr>
                                            @*kurumsal radiobutton seçilirse burası görünecek*@

                                            <tr class="cart-subtotal" id="tr_vergino" style="display:none;">
                                                <th>Vergi Numarası</th>
                                                <td>
                                                    <span class="amount">
                                                        <input style="background-color:grey;" type="text" name="txt_corporate" class="inputbox" maxlength="10" required onkeypress="return numberonly(this,event)" />
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <h2>SATIŞ SÖZLEŞMESİ</h2>
                                <div class="total_table" style="border-color:black;border:solid;">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <td>
                                                    <span class="amount">
                                                        <strong>
                                                      
                                                            Satılan ürün iadesi 2 gün içinde yapılabilir.Kırılan ürünlerden firmamız sorumlu değildir.KVKK  sözleşmesini okudum ve kabul ediyorum.
                                                        </strong>
                                                    </span>
                                                </td>
                                            </tr>
                                    
                                        </tbody>
                                    </table>
                               
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-6 "></div>
                        <div class="col-lg-6 col-md-6 col-sm-6 ">
                            <div class="cart_totals">
                                <div class="total_table" style="border-color:black;border:solid;">
                                    <table class="table-responsive">
                                        <tbody>

                                            <tr class="cart-subtotal">
                                                <td>
                                                    <span class="amount">
                                                        <label>
                                                            @Html.CheckBox("chk_accept",false)
                                                            Yukarıdaki bilgilendirmeleri okudum, kabul ediyorum.
                                                        </label>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                   
                                </div>
                                <div class="submit_crt" style="text-align:right;">
                                    <a href="@Url.Action("Order","Home")" title="Ödeme Adımına Geçiniz">
                                        <input type="submit" class="update_cart" value="Siparişi Onayla" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<!-- wishlist area end  -->
