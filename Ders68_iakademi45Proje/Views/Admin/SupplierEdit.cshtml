@model Supplier
@{
    ViewData["Title"] = "SupplierEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA DÜZELTME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/SupplierEdit" method="post">
                    <div class="form-body">

                        <div class="form-group">
                            <label asp-for="BrandName" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="BrandName" class="form-control input-lg" placeholder="Marka Adı" required maxlength="100" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="PhotoPath" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input type="file" asp-for="PhotoPath" class="form-control input-lg" />
                            </div>
                            <span asp-validation-for="PhotoPath" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Aktif Mi?</label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>

                            <input type="hidden" asp-for="SupplierID" />
                        </div>
                        <a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
                        <input type="submit" name="name" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
