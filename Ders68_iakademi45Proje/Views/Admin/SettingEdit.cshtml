@model Setting
@{
    ViewData["Title"] = "SettingEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-2"></div>

    <div class="col-md-8 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> KATEGORİ DÜZELTME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="/Admin/CategoryEdit" method="post">
                    <div class="form-body">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">TELEFON NO</label>
                                <div class="col-md-9">
                                    <input asp-for="telephone" class="form-control input-lg" placeholder="Telefon No" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">EMAIL</label>
                                <div class="col-md-9">
                                    <input asp-for="email" class="form-control input-lg" placeholder="Email" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">ADRES</label>
                                <div class="col-md-9">
                                    <input asp-for="address" class="form-control input-lg" placeholder="Adres" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">ANA SAYFA ÜRÜN SAYISI</label>
                                <div class="col-md-9">
                                    <input asp-for="mainpageCount" class="form-control input-lg" placeholder="Ana Sayfa Ürün Sayısı" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">ALT SAYFA ÜRÜN SAYISI</label>
                                <div class="col-md-9">
                                    <input asp-for="subpageCount" class="form-control input-lg" placeholder="Alt Sayfa Ürün Sayısı" required />
                                </div>
                            </div>

                            <input type="hidden" asp-for="SettingID" />
                        </div>
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">ANA MENÜ</a>
                        <input type="submit" name="name" value="KAYDET" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
