@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    iakademi45Context context = new iakademi45Context();
    string CategoryName = "";
    string BrandName = "";
    string StatusName = "";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i><span style="background-color:red;color:white;">@ViewBag.productname</span> ÜRÜNÜNÜN BİLGİLERİ
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body flip-scroll">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <thead class="flip-content">
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.ProductID)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.ProductID)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.ProductName)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.UnitPrice)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.UnitPrice)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.CategoryID)
                            </th>
                            <th>
                                @{
                                    CategoryName = context.Categories.FirstOrDefault(c => c.CategoryID == Model.CategoryID).CategoryName;
                                    @CategoryName
                                }
                            </th>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.SupplierID)
                            </th>
                            <th>
                                @{
                                    BrandName = context.Suppliers.FirstOrDefault(s => s.SupplierID == Model.SupplierID).BrandName;
                                    @BrandName
                                }
                            </th>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Stock)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Discount)
                            </td>
                        </tr>

                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.StatusID)
                            </th>
                            <th>
                                @{
                                    StatusName = context.Statuses.FirstOrDefault(st => st.StatusID == Model.StatusID).StatusName;
                                    @StatusName
                                }
                            </th>
                        </tr>

                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.AddDate)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.AddDate)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Keywords)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Keywords)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.KDV)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.KDV)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.HighLighted)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.HighLighted)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.TopSeller)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.TopSeller)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Related)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Related)
                            </td>
                        </tr>

                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Notes)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Notes)
                            </td>
                        </tr>

                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.PhotoPath)
                            </th>
                            <td>
                                <img src="~/resimler/@Model?.PhotoPath" height="35" width="50">
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Active)
                            </td>
                        </tr>
                    </thead>
                </table>
                <a asp-action="ProductIndex" class="btn btn-primary">ÜRÜN LİSTESİ</a>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div><!-- END PAGE CONTENT-->
