@model Status
@{
    ViewData["Title"] = "StatusDelete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<p>
    <a asp-action="StatusCreate" asp-controller="Admin" class="btn btn-success">YENİ STATÜS</a>
</p>

<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>STATÜLER
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-dark table-hover">
                        <thead style="background-color:grey;color:white;">
                            <tr>
                                <th>
                                    @Html.DisplayFor(model => model.StatusID)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => model.StatusName)
                                </th>
                                <th>
                                    @Html.DisplayFor(model => model.Active)
                                </th>
                            </tr>
                        </thead>
                    </table>
                    <form asp-action="StatusDelete" method="post">
                        <input type="hidden" asp-for="StatusID" />
                        <input type="submit" value="SİL" class="btn btn-danger" onclick="return onclick('SİLMEK İSTEDİĞİNİZDEN EMİN MİSİNİZ?')" />
                        <a asp-action="StatusIndex" class="btn btn-primary">STATÜ LİSTESİNE GİT</a>
                    </form>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->
<!-- END CONTENT -->
